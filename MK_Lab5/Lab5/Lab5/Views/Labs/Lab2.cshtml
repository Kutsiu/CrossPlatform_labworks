@model Lab5.Models.Lab2DataModel

@{
    ViewData["Title"] = "Lab2";
}

<h2>Calculation of Ways to Show a Number</h2>

<form method="post" asp-controller="Labs" asp-action="Lab2">
    <div class="form-group">
        <label for="number">Enter Number:</label>
        <input type="number" class="form-control" id="number" asp-for="Number" placeholder="Enter a number">
        <small class="form-text text-muted">Enter a number between 1 and 1000.</small>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Calculate</button>
</form>

@if (Model != null)
{
    @if (!string.IsNullOrEmpty(Model.ErrorValue))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorValue
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.Calculated))
    {
        <div class="alert alert-success">
            <strong>Result:</strong> @Model.Calculated
        </div>
    }
}
