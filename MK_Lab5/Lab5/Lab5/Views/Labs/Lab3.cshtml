@model Lab5.Models.Lab3DataModel

@{
    ViewData["Title"] = "Lab3";
}

<h2>Atari Black Group Count</h2>

<form method="post" asp-controller="Labs" asp-action="Lab3">
    <div class="form-group">
        <label for="game">Enter Game Board:</label>
        <textarea class="form-control" id="game" asp-for="Game" rows="10" placeholder="Enter game board, one row per line. Use 'B' for black, 'W' for white, '.' for empty."></textarea>
        <small class="form-text text-muted">Enter the game board with each row on a new line. Use 'B', 'W', and '.' to represent the board.</small>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Calculate</button>
</form>

@if (Model != null)
{
    @if (!string.IsNullOrEmpty(Model.ErrorValue))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorValue
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.Calculated))
    {
        <div class="alert alert-success">
            <strong>Result:</strong> @Model.Calculated
        </div>
    }
}
